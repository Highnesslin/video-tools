{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["dom", "dom.iterable", "esnext", "WebWorker"],                             /* Specify library files to be included in the compilation. */
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    
    
    "noImplicitAny": true /* Raise error on expressions and declarations with an implied 'any' type. */,
    "strictNullChecks": false /* Enable strict null checks. */,
    "noImplicitThis": false /* Raise error on 'this' expressions with an implied 'any' type. */,
    "downlevelIteration": true,
    "baseUrl": "." /* Base directory to resolve non-absolute module names. */ /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */,
    "rootDir": "src",
    "outDir": "dist" /* List of root folders whose combined content represents the structure of the project at runtime. */,
    "types": ["Emscripten"] /* Type declaration files to be included in compilation. */,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist", "lib"],
  // "references": [{ "path": "./tsconfig.node.json" }],
}
